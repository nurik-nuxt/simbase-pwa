{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    // Remove or set "noEmit" to false, because references cannot have noEmit: true
    "noEmit": false,
    // Possibly also need "declaration": true if you are building type declarations.
  },
  "include": ["src/**/*.ts", "src/**/*.vue"]
}
